{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS API",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceFolder}/api/node_modules/@nestjs/cli/bin/nest.js",
                "start",
                "--watch"
            ],
            "restart": true,
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "cwd": "${workspaceFolder}/api",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/api/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/api/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS API",
            "port": 9229,
            "restart": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/api/**",
                "!**/node_modules/**"
            ],
            "outFiles": [
                "${workspaceFolder}/api/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "test:debug"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/api",
            "sourceMaps": true
        }
    ]
}